<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mathiap.howcanadianareyou.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Questions"
                android:text="@string/question1" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q1c1"
                    style="@style/Answers"
                    android:text="@string/q1c1" />

                <RadioButton
                    android:id="@+id/q1c2"
                    style="@style/Answers"
                    android:text="@string/q1c2" />

                <RadioButton
                    android:id="@+id/q1c3"
                    style="@style/Answers"
                    android:text="@string/q1c3" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Questions"
                android:text="@string/question2" />

            <CheckBox
                android:id="@+id/q2c1"
                style="@style/Answers"
                android:text="@string/q2c1" />

            <CheckBox
                android:id="@+id/q2c2"
                style="@style/Answers"
                android:text="@string/q2c2" />

            <CheckBox
                android:id="@+id/q2c3"
                style="@style/Answers"
                android:text="@string/q2c3" />

            <CheckBox
                android:id="@+id/q2c4"
                style="@style/Answers"
                android:text="@string/q2c4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Questions"
                android:text="@string/question3" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q3c1"
                    style="@style/Answers"
                    android:text="@string/q3c1" />

                <RadioButton
                    android:id="@+id/q3c2"
                    style="@style/Answers"
                    android:text="@string/q3c2" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Questions"
                android:text="@string/question4" />

            <EditText
                android:id="@+id/q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_hint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Questions"
                android:text="@string/question5" />

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q5c1"
                    style="@style/Answers"
                    android:text="@string/q5c1" />

                <RadioButton
                    android:id="@+id/q5c2"
                    style="@style/Answers"
                    android:text="@string/q5c2" />

                <RadioButton
                    android:id="@+id/q5c3"
                    style="@style/Answers"
                    android:text="@string/q5c3" />

                <RadioButton
                    android:id="@+id/q5c4"
                    style="@style/Answers"
                    android:text="@string/q5c4" />

                <RadioButton
                    android:id="@+id/q5c5"
                    style="@style/Answers"
                    android:text="@string/q5c5" />
            </RadioGroup>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/submitBttn" />


    </LinearLayout>


</ScrollView>
