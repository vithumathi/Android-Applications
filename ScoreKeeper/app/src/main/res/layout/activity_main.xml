<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mathiap.scorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffb2b2">

            <TextView
                android:id="@+id/scoreView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Runs/Wicket"
                android:textSize="48sp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/oneRun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/twoRun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/threeRun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/fourRun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/sixRun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/out1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OUT"
                android:textColor="@android:color/holo_red_dark"
                android:layout_gravity="center"
                android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#3090C7">

            <TextView
                android:id="@+id/scoreView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Runs/Wicket"
                android:textSize="48sp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/oneRun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/twoRun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/threeRun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/fourRun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/sixRun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_gravity="center"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/out2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OUT"
                android:textColor="@android:color/holo_red_dark"
                android:layout_gravity="center"
                android:onClick="onClick"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:layout_gravity="center"
        android:onClick="onClick"/>




</LinearLayout>
